<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Music_Synchronizer.Controls.MusicControls">
    <Grid ColumnDefinitions="40, 40, *, 140">
        <Button Grid.Column="0" VerticalAlignment="Center" x:Name="PlayToggleButton" Content="Play"/>
        <Button Grid.Column="1" VerticalAlignment="Center" x:Name="StopButton" Content="Stop"/>
        <Slider Grid.Column="2" VerticalAlignment="Center" x:Name="SeekerSlider"  />
        <StackPanel Grid.Column="3" x:Name="VolumeSlider" VerticalAlignment="Center" Orientation="Horizontal" Spacing="5" Margin="5">
            <TextBlock Text="🔊" VerticalAlignment="Center" />
            <Slider Width="100" Minimum="0" Maximum="100" Value="75" />
        </StackPanel>
        
    </Grid>
</UserControl>
