<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Music_Synchronizer.MVVM.ViewModel"
             xmlns:view="clr-namespace:Music_Synchronizer.MVVM.View"
             x:Class="Music_Synchronizer.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
    </Application.Styles>

    <Application.DataTemplates>
        <DataTemplate DataType="viewModel:ClientViewModel">
            <view:ClientView />
        </DataTemplate>
        <DataTemplate DataType="viewModel:HostViewModel">
            <view:HostView />
        </DataTemplate>
        <DataTemplate DataType="viewModel:ClientConnectedViewModel">
            <view:ClientConnectedView />
        </DataTemplate>
    </Application.DataTemplates>
</Application>