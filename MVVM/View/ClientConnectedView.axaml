<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Music_Synchronizer.MVVM.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Music_Synchronizer.MVVM.View.ClientConnectedView"
             x:DataType="viewModel:ClientConnectedViewModel">
    <Grid>
        <Grid RowDefinitions="*, 100">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Playing">

                </TextBlock>
                <TextBlock Text="{Binding PlayingFileText}"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Background="Gray"></StackPanel>


        </Grid>
        <Grid IsVisible="{Binding IsDownloadingFile}" Background="Black" Opacity="70">
            <TextBlock Text="Downloading">

            </TextBlock>
        </Grid>
    </Grid>
</UserControl>