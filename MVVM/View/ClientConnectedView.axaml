<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModel="clr-namespace:Music_Synchronizer.MVVM.ViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Music_Synchronizer.MVVM.View.ClientConnectedView"
             x:DataType="viewModel:ClientConnectedViewModel">
    <Grid>
        <Grid RowDefinitions="*, 100">
            <Grid>
                <Grid IsVisible="{Binding IsDownloadingFile}" Background="Black" Opacity="90">
                    <TextBlock Foreground="AliceBlue" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Downloading">

                    </TextBlock>
                </Grid>
            </Grid>

                <Grid Grid.Row="1" Background="Gray" ColumnDefinitions="60, 60, *, 200" ColumnSpacing="5">
                    <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Grid.Column="0" IsVisible="{Binding !IsPlaying}" VerticalAlignment="Center"
                            x:Name="PlayToggleButton" Content="Play" Command="{Binding TogglePlayCommand}"
                            ToolTip.Tip="Only affects local player, does not affect clients"/>
                    <Button HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Grid.Column="0" IsVisible="{Binding IsPlaying}" VerticalAlignment="Center"
                            x:Name="PauseToggleButton" Content="Pause" Command="{Binding TogglePlayCommand}"
                            ToolTip.Tip="Only affects local player, does not affect clients"/>
                    <StackPanel Grid.Column="2" IsVisible="{Binding FileLoaded}" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock HorizontalAlignment="Left"  Text="Host File Loaded">
                        </TextBlock>
                        <TextBlock HorizontalAlignment="Left" Text="{Binding PlayingFileText}"></TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="3" VerticalAlignment="Center" Orientation="Horizontal"
                                Spacing="5" Margin="5">
                        <TextBlock Text="🔊" VerticalAlignment="Center" />
                        <Slider x:Name="VolumeSlider" VerticalAlignment="Center" Width="150" Minimum="0" Maximum="100" Value="{Binding VolumeSlider}"/>
                    </StackPanel>
                </Grid>
        </Grid>

    </Grid>
</UserControl>